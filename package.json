{
  "name": "electron-music-player",
  "version": "1.0.0",
  "description": "Music player and visualizer built with Electron",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass": "sass src/styles/main.scss public/style.css",
    "sass:watch": "sass --watch src/styles/main.scss:public/style.css",
    "start": "npm run sass && electron .",
    "start:dev": "npm-run-all --parallel sass:watch electron:dev",
    "electron:dev": "electron ."
  },
  "author": "Frank Francione",
  "license": "ISC",
  "devDependencies": {
    "electron": "^21.4.4",
    "npm-run-all": "^4.1.5",
    "sass": "^1.89.2"
  }
}
